#!/bin/bash
set -o errexit
set -o nounset
set -o pipefail

CONSTELLATION_SRC_DIR=${CONSTELLATION_SRC_DIR:?"!"}
OUTPUT_DIR=${OUTPUT_DIR:?"!"}

apt-get update
apt-get install libdb-dev libsodium-dev zlib1g-dev libtinfo-dev

pushd $CONSTELLATION_SRC_DIR
  stack install --allow-different-user
popd

cp $QUORUM_SRC_DIR/build/bin/constellation-node \
  $OUTPUT_DIR/constellation-node

