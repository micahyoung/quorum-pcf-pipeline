#!/bin/bash
set -o errexit
set -o nounset
set -o pipefail

true ${CONSTELLATION_SRC_DIR:?"!"}
true ${OUTPUT_DIR:?"!"}

apt-get update
apt-get -y install libdb-dev libleveldb-dev libsodium-dev zlib1g-dev libtinfo-dev

pushd $CONSTELLATION_SRC_DIR
  stack install --allow-different-user
popd

pushd /root/.local/bin/
  ldd constellation-node | grep -e 'libsodium|libleveldb' | awk '{print $3}' | xargs cp -t .
popd

cp /root/.local/bin/* \
  $OUTPUT_DIR/
